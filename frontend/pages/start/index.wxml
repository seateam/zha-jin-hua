<view class="user" wx:if="{{user}}">
  <image class="avatar" src="{{user.avatar}}" mode="aspectFill"></image>
  <view class="name">{{user.name}}</view>
</view>
<view class="pokers">
  <view class="poker" wx:for="{{pockers}}" wx:key="index" style="color:{{item.color}}">
    <view class="top">
      <view>{{item.point}}</view>
      <view>{{item.formatSuit}}</view>
    </view>
    <view class="bottom">
      <view>{{item.formatSuit}}</view>
      <view>{{item.point}}</view>
    </view>
  </view>
</view>
<block wx:if="{{pockers[0].point}}">
  <button wx:if="{{user.open === false}}" class="start" bindtap="open">开 牌</button>
  <button wx:else class="start" disabled>等 待</button>
</block>
<button wx:else class="start" bindtap="start" disabled="{{!inited}}">发 牌</button>